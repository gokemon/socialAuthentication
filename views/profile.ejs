<!doctype html>
<html>

<head>
    <title>Profile Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <!-- load bootstrap css -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- load fontawesome -->
    <link rel="stylesheet" type="text/css" href="css/viewStyles.css" />
</head>

<body>
    <div class="container">
        <div class="page-header text-center">
            <h1><span class="fa fa-user" aria-hidden="true"></span>Profile Page</h1>
            <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        </div>

        <!-- LOCAL INFORMATION -->
        <div class="row">
            <div class="col-sm-6">
                <div class="well">
                    <h3><span class="fa fa-user-circle" aria-hidden="true"></span> Local</h3>
                    <p>
                        <strong>id</strong>:
                        <%= user._id %><br>
                            <strong>email</strong>:
                            <%= user.local.email %><br>
                                <strong>password</strong>:
                                <%= user.local.password %>
                    </p>
                </div>
            </div>
        </div>
        <!-- end Local -->


        <!-- FACEBOOK INFORMATION -->
        <div class="row">
            <div class="col-sm-6">
                <div class="well">
                    <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>
                    <p>
                        <strong>id</strong>:
                        <%= user.facebook.id %><br>
                            <strong>token</strong>:
                            <%= user.facebook.token %><br>
                                <strong>email</strong>:
                                <%= user.facebook.email %><br>
                                    <strong>name</strong>:
                                    <%= user.facebook.name %>
                    </p>
                </div>
            </div>
        </div>
        <!-- end Facebook -->

        <!-- TWITTER INFORMATION -->
        <div class="row">
            <div class="col-sm-6">
                <div class="well">
                    <h3 class="text-info"><span class="fa fa-twitter"></span> Twitter</h3>
                    <p>
                        <strong>id</strong>:
                        <%= user.twitter.id %><br>
                            <strong>token</strong>:
                            <%= user.twitter.token %><br>
                                <strong>username</strong>:
                                <%= user.twitter.username %><br>
                                    <strong>displayName</strong>:
                                    <%= user.twitter.displayName %>
                    </p>
                </div>
            </div>
        </div>
        <!-- end Twitter -->
    </div>
    <!-- end page container -->
</body>

</html>